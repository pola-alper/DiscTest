<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.keronpola.Activities.PersonalitiesK"
    tools:showIn="@layout/activity_personalities">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:paddingTop="@dimen/activity_vertical_margin"
        android:src="@drawable/disclogove" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="9"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:orientation="vertical"
            android:scrollbars="none">

            <Button
                android:id="@+id/personality_d"
                style="@style/button_D"
                android:onClick="button_dd"
                android:text="D"
                android:textAlignment="center"
                tools:ignore="OnClick" />

            <Button
                android:id="@+id/personality_i"
                style="@style/button_I"
                android:onClick="button_i"

                android:text="I"
                android:textAlignment="center"
                tools:ignore="OnClick" />

            <Button
                android:id="@+id/personality_s"
                style="@style/button_s"

                android:onClick="button_s"
                android:text="S"
                android:textAlignment="center"
                tools:ignore="OnClick" />

            <Button
                android:id="@+id/personality_c"
                style="@style/button_c"

                android:onClick="button_c"
                android:text="C"
                android:textAlignment="center"
                tools:ignore="OnClick" />


        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/adViewPer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:orientation="horizontal">

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
