<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="70dip" />

            <gradient android:angle="-90" android:endColor="#74e332" android:startColor="#74e332" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="70dip" />

            <solid android:color="#74e332" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="70dip" />

            <gradient android:angle="-90" android:endColor="#47b704" android:startColor="#47b704" />
        </shape>
    </item>
</selector>