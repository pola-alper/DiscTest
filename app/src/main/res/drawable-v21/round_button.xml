<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="70dip" />

            <gradient android:angle="-90" android:endColor="#f6776d" android:startColor="#f6776d" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="70dip" />

            <solid android:color="#f6776d" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <corners android:radius="1000dip" />

            <gradient android:angle="-90" android:endColor="#fd1908" android:startColor="#fd1908" />
        </shape>
    </item>
</selector>